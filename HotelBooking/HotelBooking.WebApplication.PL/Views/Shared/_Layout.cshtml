@{
    bool IsAuthenticated=false;
    bool IsAdmin=false;
    if (User.Identity.IsAuthenticated)
    {
        IsAuthenticated = true;
    }
    if (User.Claims?.SingleOrDefault(x => x.Type == ClaimsIdentity.DefaultRoleClaimType)?.Value == "Admin")
    {
        IsAdmin = true;
    }
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/icon.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/scripts/ShiftMenuScript.js"></script>
</head>
<body>
    <div class="icon paragraph button-shift-paragraph">
    </div>
    <div class="top">
        <div class="info">
            <div class="navigation">
                @if (IsAdmin)
                {
                    <div class="nav-element">
                        <a href="/Home/CreateApartment">Add apartment</a>
                    </div>
                }
                <div class="nav-element">
                    apartments
                </div>
            </div>
            <div class="user-info">
                @if (IsAuthenticated)
                {
                    <div class="icon notification">
                    
                    </div>
                    <div class="profile">
                    
                    </div>
                    <div class="logout">
                    
                    </div>
                }
                else
                {
                    <div class="login">
                        <a href="/User/Login">Login</a>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="content">
        @RenderBody()
    </div>
    <div class="footer">
    </div>
</body>
</html>