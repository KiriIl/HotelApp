@model BookingApartmentViewModel
@{
    Layout = "_Layout";
}

<div>
    <form action="BookingApartment" method="post">
        <div>
            @Html.HiddenFor(x=>x.Apartment.Id)
        </div>
        <div>
            <div>
                @Html.HiddenFor(x=>x.Apartment.RoomsCount)
            </div>
            <div>
                @Html.HiddenFor(x=>x.Apartment.Cost)
            </div>
            <div>
                @Html.HiddenFor(x=>x.Apartment.RoomType)
            </div>
            <div>
                @Html.HiddenFor(x=>x.Apartment.Info)
            </div>
        </div>
        <div>
            @Html.DisplayNameFor(x => x.ArrivalDate)
            @Html.TextBoxFor(x => x.ArrivalDate, new { @type = "date" })
            @Html.ValidationMessageFor(x => x.ArrivalDate)
        </div>
        <div>
            @Html.DisplayNameFor(x => x.DepartureDate)
            @Html.TextBoxFor(x => x.DepartureDate, new { @type = "date" })
            @Html.ValidationMessageFor(x => x.DepartureDate)
        </div>
        <div>
            <button type="submit">Ok</button>
        </div>
    </form>
</div>